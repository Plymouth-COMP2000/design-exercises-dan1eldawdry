<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/reservationDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2E7D32" />

        <TextView
            android:id="@+id/guestNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guest: username"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/reservationTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/groupSizeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group Size"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/specialRequestsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Special Requests"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="12dp">

        <Button
            android:id="@+id/editReservationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textSize="12sp"
            android:padding="6dp"
            android:backgroundTint="#66BB6A"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/cancelReservationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="12sp"
            android:padding="6dp"
            android:backgroundTint="#C62828"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
